
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-center">Relaçao de todos os chamados deste Cliente</h4>

            {% for chamado in chamados %}
                <div >
                    <ul class="list-unstyled">
                        <li class="list-inline-item">
                            <a href="{{ path('timeline-chamados', { chamado: chamado.id }) }}"
                               data-toggle="tooltip"
                               data-original-title="{{ 'call.open.icon.timeline'|trans|capitalize }}">
                                <i class="mdi mdi-timer text-inverse m-r-10"></i>
                            </a>
                        </li>
                        <li>
                            <li class="list-inline-item">
                                <span class="text-info">Aberto em:</span>
                                {{ chamado.data|date('d/m/Y h:i') }}
                            </li>
                            <li class="list-inline-item">
                                <span class="text-success">- Finalizado em:</span>
                                {{ chamado.finalizado|date('d/m/Y h:i') }}
                            </li>
                            <li class="list-inline-item">
                                <span class="text-info">- Status:</span>
                                {{ chamado.status.nome }}
                            </li>
                        </li>
                        <li class="text-justify"><span class="text-info">Solicitaçao:</span> {{ chamado.mensagem }}</li>
                        <li class="text-justify"><span class="text-info">Problema Constatado:</span> {{ chamado.problema }}</li>
                        <li class="text-justify"><span class="text-info">Soluçao:</span> {{ chamado.solucao }}</li>
                    </ul>
                </div>
                {% if not loop.last %}
                    <hr>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
