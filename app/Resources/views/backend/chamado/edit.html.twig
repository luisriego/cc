                    {{ form_widget(form.solucao, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-md-6">
                    {{ form_label(form.usoInterno, 'Uso Interno', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.usoInterno, {'attr': {'class': 'form-control form-control-line', 'rows': '5'}}) }}
                </div>

                <div class="col-md-12 m-t-40">
                    {{ include('backend/inc/_botones.accion.html.twig', {'referrer': 'chamados-abertos' }) }}
                </div>

                {{ form_widget(form._token) }}
                {{ form_end(form, {'render_rest': false}) }}
                    </div>
                </div>
            </div>

            <!-- Para incluir este codigo es necesario tanto dropify.min.css, dropify.min.js como el codigo js -->
            {{ include('backend/inc/_upload.html.twig') }}

        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
