{% extends 'backend/layout.html.twig' %}

{% block head %}
    <link href="{{ asset('assets/css/pages/file-upload.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/plugins/select2/dist/css/select2.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block content %}
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->

    {#{{ include('dashboard/inc/_breadcrumb.html.twig') }}#}

    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->


    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        {{ include('backend/inc/_breadcrumb.html.twig') }}

        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="card row">
            <!-- column -->
            <div class="card-body col-sm-12 col-xs-12">
                {{ form_start(form, {'attr': {'class': 'form-material m-t-30 row'}}) }}
                {{ form_errors(form) }}

                <div class="form-group col-md-4">
                    {{ form_label(form.nome, 'Primeiro Nome', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.nome, {'attr': {'class': 'form-control form-control-line'}}) }}
                </div>
                <div class="form-group col-md-4">
                    {{ form_label(form.sobrenome, 'Sobrenome', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.sobrenome, {'attr': {'class': 'form-control form-control-line'}}) }}
                </div>
                <div class="form-group col-md-4">
                    {{ form_label(form.username, 'Nome de usuario', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control form-control-line'}}) }}
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-md-4">
                    {{ form_label(form.email, 'E-mail', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-line'}}) }}
                </div>
                {#<div class="form-group col-md-4">#}
                    {#{{ form_label(form.roles, 'Role de Usuario', { 'label_attr': {'class': 'control-label etiqueta'} }) }}#}
                    {#{{ form_widget(form.roles, {'attr': {'class': 'form-control form-control-line'}}) }}#}
                {#</div>#}
                <div class="form-group col-md-4">
                    <label for="">Role do usuário</label>
                    <select class="form-control form-control-line" name="roles" id="roles">
                        <option value="ROLE_USER" {{ pessoa.roles[0] == 'ROLE_USER' ? 'selected' : '' }}>Cliente</option>
                        <option value="ROLE_TECNICO"{{ pessoa.roles[0] == 'ROLE_TECNICO' ? 'selected' : '' }}>Técnico</option>
                        <option value='ROLE_ADMIN'{{ pessoa.roles[0] == 'ROLE_ADMIN' ? 'selected' : '' }}>Administrador</option>
                    </select>
                </div>

                <div class="form-group col-md-4">
                    {{ form_label(form.empresa, 'Empresa', { 'label_attr': {'class': 'control-label etiqueta'} }) }}
                    {{ form_widget(form.empresa, {'attr': {'class': 'form-control form-control-line'}}) }}
                </div>



                <div class="col-md-12 m-t-40">
                    {{ include('backend/inc/_botones.accion.html.twig', {'referrer': 'chamados-abertos' }) }}
                </div>

                {{ form_widget(form._token) }}
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->

    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->





    <!-- ============================================================== -->
    <!-- End Page Content -->
    <!-- ============================================================== -->


{% endblock %}

{% block js %}
    <script src="{{ asset('assets/js/chosen.jquery.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/select2/dist/js/select2.full.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/js/mask.js') }}"></script>
    <script>
        $(".select2").select2();
        $('.selectpicker').selectpicker();
    </script>
{% endblock %}